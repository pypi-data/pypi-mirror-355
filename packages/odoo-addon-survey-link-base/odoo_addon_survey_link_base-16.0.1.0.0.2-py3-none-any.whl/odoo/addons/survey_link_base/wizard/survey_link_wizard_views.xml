<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="survey_link_wizard_form_view" model="ir.ui.view">
        <field name="name">survey.link.wizard.form.view</field>
        <field name="model">survey.link.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="survey_id" required="1" />
                    <field name="partner_id" required="1" />
                    <field name="date_deadline" invisible="1" />
                </group>
                <group>
                    <field
                        name="share_link"
                        readonly="1"
                        widget="CopyClipboardChar"
                        class="mb16"
                    />
                </group>
                <footer>
                    <button
                        string="Start"
                        name="action_start_survey"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
