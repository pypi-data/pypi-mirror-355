#!/bin/bash
# Custom slash command: /test-focused
# Runs tests for the current focus area with detailed output

echo "ðŸ§ª Running focused tests on: $ARGUMENTS"

if [ -z "$ARGUMENTS" ]; then
    echo "Usage: /test-focused <module_name or pattern>"
    exit 1
fi

# Run tests with maximum verbosity for the specified pattern
uv run pytest -xvs -k "$ARGUMENTS" --tb=short

# Show coverage for the tested modules
echo -e "\nðŸ“Š Coverage for tested modules:"
uv run pytest --cov=src/evolve --cov-report=term-missing -k "$ARGUMENTS" -q
