```python
import time
from persian_ocr import PersianOCR, get_preset

def process_document(pdf_path):
    # Ø§Ø³ØªÙØ§Ø¯Ù‡ Ø§Ø² ØªÙ†Ø¸ÛŒÙ…Ø§Øª Ø¨Ù‡ÛŒÙ†Ù‡
    config = get_preset("balanced")
    ocr = PersianOCR(config=config)
    
    print(f"ğŸ”„ Ø´Ø±ÙˆØ¹ Ù¾Ø±Ø¯Ø§Ø²Ø´: {pdf_path}")
    start_time = time.time()
    
    # Ù¾Ø±Ø¯Ø§Ø²Ø´
    result = ocr.extract_from_pdf(pdf_path)
    
    if result.success:
        print(f"âœ… Ù…ÙˆÙÙ‚ÛŒØª!")
        print(f"ğŸ“„ ØµÙØ­Ø§Øª: {result.successful_pages}/{result.total_pages}")
        print(f"ğŸ“ Ú©Ø§Ø±Ø§Ú©ØªØ±Ù‡Ø§: {result.total_characters:,}")
        print(f"â±ï¸ Ø²Ù…Ø§Ù†: {result.processing_time:.1f} Ø«Ø§Ù†ÛŒÙ‡")
        print(f"ğŸ’¾ ÙØ§ÛŒÙ„: {result.output_file}")
        
        # Ù†Ù…Ø§ÛŒØ´ Ù†Ù…ÙˆÙ†Ù‡ Ù…ØªÙ†
        if result.page_results:
            sample_text = result.page_results[0].text[:200]
            print(f"ğŸ“– Ù†Ù…ÙˆÙ†Ù‡: {sample_text}...")
    else:
        print(f"âŒ Ø®Ø·Ø§: {result.error_message}")
    
    return result

# Ø§Ø¬Ø±Ø§
