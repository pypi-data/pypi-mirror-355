<odoo>

<record id="stay_fire_print_form" model="ir.ui.view">
    <field name="name">stay_fire_print.form</field>
    <field name="model">stay.fire.print</field>
    <field name="arch" type="xml">
        <form>
            <group name="main">
                <field name="date" />
                <field name="company_id" groups="base.group_multi_company" />
            </group>
            <footer>
                <button
                        type="object"
                        name="run"
                        string="Get Report"
                        class="btn-primary"
                    />
                <button special="cancel" string="Cancel" />
            </footer>
        </form>
    </field>
</record>

<record id="stay_fire_print_action" model="ir.actions.act_window">
    <field name="name">Fire Report</field>
    <field name="res_model">stay.fire.print</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

<menuitem
        id="stay_fire_print_menu"
        sequence="15"
        action="stay_fire_print_action"
        parent="stay_report_menu"
    />


</odoo>
