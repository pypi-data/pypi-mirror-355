  "scripts": {
    "release": "uv run python scripts/release.py $*",
    "alpha": "uv run python scripts/release.py --alpha",
    "build": "node esbuild.config.mjs",
    "dev": "node esbuild.config.mjs --watch",
    "watch:docs": "uv run mkdocs serve",
    "build:docs": "uv run mkdocs build",
    "test:js": "yarn vitest run",
    "test:js-watch": "node --experimental-vm-modules node_modules/vitest/vitest.mjs",
    "test:py": "uv run python -m pytest tests/python --ignore=tests/python/test_screenshots.py",
    "test:images": "uv run python -m pytest tests/python/test_screenshots.py",
    "test": "npm-run-all test:py test:js"
  },
  "files": [
    "src/js-dist"
  ],
  "publishConfig": {
    "access": "public"
  }
