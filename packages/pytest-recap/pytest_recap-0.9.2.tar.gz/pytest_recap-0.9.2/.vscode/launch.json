{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
            ],
        },
        {
            "name": "Python recap_json_to_html.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/recap_json_to_html.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "/Users/jwr003/.pytest-recap-sessions/20250601-200443-recap.json",
                "/Users/jwr003/.pytest-recap-sessions/20250601-200443-recap.html"
            ],
        },
        {
            "name": "Pytest -v tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-v",
                "${workspaceFolder}/tests/"
            ]
        },
        {
            "name": "Pytest --recap",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": true,
            "args": [
                "-s",
                "--recap", "--recap-pretty", "--recap-destination", "${workspaceFolder}/recap.json",
                "demo-tests/test_realistic_minimal.py"
            ]
        }
    ]
}
