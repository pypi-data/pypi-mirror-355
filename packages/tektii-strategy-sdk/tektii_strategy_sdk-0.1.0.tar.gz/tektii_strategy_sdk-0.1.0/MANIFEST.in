# Include important files in the distribution
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include requirements-dev.txt

# Include proto files
recursive-include proto *.proto

# Include the generated proto Python files
recursive-include tektii_sdk/proto *.py

# Include example files
recursive-include examples *.py *.json *.md

# Include test files for development
recursive-include tests *.py

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .gitignore
