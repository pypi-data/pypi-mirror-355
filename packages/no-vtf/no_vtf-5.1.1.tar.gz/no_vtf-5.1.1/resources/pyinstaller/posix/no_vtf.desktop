[Desktop Entry]
Type=Application
Version=1.5

Name=no_vtf
GenericName=Valve Texture Format Converter
Icon=insert-image
Exec=bash -c '"$(dirname %k)"/no_vtf -- %F; exit_status="$?"; [ -t 0 ] && read -N1 -p "Press any key to continue..." -r -s; exit "$exit_status";'
