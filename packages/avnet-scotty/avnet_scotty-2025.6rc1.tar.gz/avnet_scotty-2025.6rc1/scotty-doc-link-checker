SCOTTY_QEMUPARAMS="${SCOTTY_QEMUPARAMS:--smp 4}"

sudo chown -R "${uid:-}:${gid:-}" "${HOME}"
sudo mount -o remount,shared / /

# Runs a command against scotty-test
DOCKER_EXTRA_ARGS="${DOCKER_EXTRA_ARGS} --privileged --network host"
# shellcheck disable=SC1091
source "$(dirname "${0}")/scotty"
run_command scotty-doc-link-checker "${@}"
