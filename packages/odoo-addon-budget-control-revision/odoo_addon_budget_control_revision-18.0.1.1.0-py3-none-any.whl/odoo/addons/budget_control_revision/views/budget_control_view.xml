<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Budget Control Lines -->
    <record id="budget_control_line_list_view_readonly" model="ir.ui.view">
        <field name="name">budget.control.line.tree.view.readonly</field>
        <field name="model">budget.control.line</field>
        <field
            name="inherit_id"
            ref="budget_control.budget_control_line_list_view_readonly"
        />
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="is_readonly" />
            </xpath>
        </field>
    </record>

    <!-- Budget Control -->
    <record id="budget_control_view_form_without_header" model="ir.ui.view">
        <field name="name">budget.control.view.form.without.header</field>
        <field name="model">budget.control</field>
        <field name="inherit_id" ref="budget_control.budget_control_view_form" />
        <field name="priority" eval="35" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="/form/header" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath
                expr="//button[@name='prepare_budget_control_matrix']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_budget_control_filter" model="ir.ui.view">
        <field name="name">view.budget.control.filter</field>
        <field name="model">budget.control</field>
        <field name="inherit_id" ref="budget_control.view_budget_control_filter" />
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter
                    name="revision_number"
                    string="Revision"
                    context="{'group_by': 'revision_number'}"
                />
            </xpath>
        </field>
    </record>
    <record id="budget_control_view_list" model="ir.ui.view">
        <field name="name">budget.control.view.list</field>
        <field name="model">budget.control</field>
        <field name="inherit_id" ref="budget_control.budget_control_view_list" />
        <field name="arch" type="xml">
            <field name="assignee_id" position="after">
                <field name="revision_number" />
            </field>
        </field>
    </record>
    <record id="budget_control_view_form" model="ir.ui.view">
        <field name="name">budget.control.view.form</field>
        <field name="model">budget.control</field>
        <field name="inherit_id" ref="budget_control.budget_control_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="create_revision"
                    string="New Revision"
                    type="object"
                    invisible="state != 'cancel'"
                    context="{'active_model': 'budget.control'}"
                />
            </xpath>
            <xpath
                expr="//group[@name='budget_control_right']/field[@name='budget_period_id']"
                position="before"
            >
                <field name="init_revision" />
                <field name="revision_number" />
            </xpath>
            <xpath expr="//notebook" position="inside">
                <field name="has_old_revisions" invisible="1" />
                <page string="Revisions" invisible="not has_old_revisions">
                    <field
                        name="old_revision_ids"
                        context="{'form_view_ref': 'budget_control_revision.budget_control_view_form_without_header'}"
                    >
                        <list>
                            <field name="name" />
                            <field
                                name="create_date"
                                string="Superseeded on"
                                optional="show"
                            />
                            <field
                                name="create_uid"
                                string="Superseeded by"
                                optional="hide"
                            />
                        </list>
                    </field>
                </page>
            </xpath>
            <!-- Add info -->
            <xpath expr="//page[@name='items']/div[@name='buttons']" position="before">
                <div
                    class="alert alert-info info_icon mt-2 d-flex align-items-center"
                    role="alert"
                    invisible="not date_range_readonly or state != 'draft'"
                >
                    <span class="fa fa-info fa-2x me-2" />
                    <span>
                        Budget control lines with a date range later than
                        <b>
                        <field name="date_range_readonly" options="{'no_open': True}" />
                    </b>
                        are editable.
                    </span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
